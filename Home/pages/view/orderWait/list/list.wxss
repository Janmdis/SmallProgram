/* pages/orderOwner/orderOwner.wxss */
page{
  width:100%;
}
.searchbox{
  width:80%;
  font-size: 30rpx;
  margin:20rpx auto;
  border-radius:10rpx;
  padding:15rpx 30rpx;
  background-color: #ededed;
}
.container_order{
  /* height:930rpx; */
  overflow: hidden;
  background-color: #f5f5f5;
  padding-top:20rpx;
}
.order{
  padding: 20rpx;
  margin:0rpx 25rpx 20rpx 25rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.order .order_top{
  text-align: left;
  font-size: 25rpx;
  overflow: hidden;
  border-bottom: 1rpx solid #cccccc;
  padding-bottom: 10rpx;
  color:#757575;
}
.order .order_top .float_l{
  float: left;
  padding-left: 30rpx;
}
.order .order_top .float_r{
  float: right;
  padding-right: 10rpx;
}
.order .order_top .float_r .space_order{
  font-size:25rpx;
  color:red;
  padding: 0 10rpx;
}
.order .order_top .float_r .status_order{
  color:#30bc8f;
}
.order .order_container{
  height:310rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #cccccc;
}
.order .order_container .headeimg{
  width:150rpx;
  height:150rpx;
  border-radius: 50%;
  background-color: #ededed;
  float: left;
  margin-top: 70rpx;
  margin-left:20rpx;
}
.order .order_container .headeimg image{
  width:150rpx;
  height:150rpx;
}
.order .order_container .content{
  width:460rpx;
  float: left;
  margin-top:20rpx;
  margin-left:30rpx;
}
.order .order_container .content .msg{
  color:#30bc8f;
}
.order .order_container .content .name{
  font-size: 35rpx;
  letter-spacing: 20rpx;
}
.order .order_container .content .phone{
  font-size: 26rpx;
}
.order .order_container .content .tips{
  color:#757575;
  font-size: 30rpx;
}
.order .order_container .content .tips .iconfont{
  font-size: 30rpx;
}
.order .order_container .content .tips .icon-fangwuxinxi{
  font-size: 36rpx;
  margin-left: -2rpx;
}
.order .order_container .content .tips .icon-mianji{
  font-size: 35rpx;
}
.order .order_container .content .tips .words{
  font-size: 25rpx;
}
.order .order_container .content .tips .cont{
  width:90%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.btngroup{
  overflow: hidden;
  padding-top:20rpx;
}
.btngroup button{
  font-size:25rpx;
  width:180rpx;
  float: right;
  margin-right:20rpx;
  color:#fff;
}
.btngroup button.prime{
  background-color: #11b786;
}
.btngroup button.warn{
  background-color: #d7434d;
}
.overback{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}
.dialog{
  width:70%;
  height:fit-content;
  position:absolute;
  top:200rpx;
  left:0;
  right:0;
  margin:auto;
  z-index: 1000;
  background-color: #fff;
  border-radius: 20rpx;
  font-size: 25rpx;
}
.dialog .header{
  padding:10rpx 20rpx;
  border-bottom: 1rpx solid #cccccc;
  color:#757575;
}
.dialog .dialog-content{
  padding: 20rpx;
}
.dialog .weui-textarea{
  width:460rpx;
  height:160rpx;
  background-color: #e5e5e5;
  padding: 10rpx;
}
.dialog .btngroup{
  display: flex;
  justify-content: center;
}
.dialog .btngroup .cancle{
  margin-right:0;
background:#fff;
border-radius:0;
border:1px solid #ddd;

}
.dialog .btngroup view, .dialog .btngroup .cancle{
  text-align: center;
  font-size: 25rpx;
  margin-top:0rpx;
  color:#11b786;
  width:50%;
  padding-top:20rpx;
  padding-bottom: 20rpx;
  clear: both;
  border-top: 1rpx solid #cccccc;
  line-height: 30px;
}
.dialog .btngroup .certain{
  border-right: 1rpx solid #cccccc;
}
