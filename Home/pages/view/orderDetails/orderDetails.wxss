.orderdetail{
  font-size:25rpx;
  color:#757575;
  background-color: #f5f5f5;
  
}
.orderdetail>view{
  padding: 10rpx 20rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom:20rpx;
}
.orderdetail .number{
  float: left;
  border-left:5rpx #30bc8f solid;
  border-bottom:1rpx #f5f5f5 solid;
}
.orderdetail .titles{
  border-left:5rpx #30bc8f solid;
  border-bottom:1rpx #f5f5f5 solid;
  padding-bottom: 10rpx;
  padding-left: 10rpx;
}
.orderdetail .red{
  color:red;
}
.orderdetail .servicename{
  float: right;
  color:#30bc8f;
}