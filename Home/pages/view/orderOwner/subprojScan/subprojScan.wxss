/* pages/view/orderDetails/orderDetails.wxss */
.followsubproject{
  font-size:25rpx;
  color:#757575;
  background-color: #f5f5f5;
}
.followsubproject>view:not(.btngroup){
  padding: 10rpx 0rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom:15rpx;
}
.followsubproject .titles{
  padding:0rpx 20rpx 10rpx 20rpx;
  border-bottom: 1rpx #f5f5f5 solid;
}
.followsubproject  .flag{
  width:5rpx;
  height:5rpx;
  border-left:5rpx #30bc8f solid;
  padding-left: 10rpx;
}
.followsubproject .content_detail{
  padding:10rpx 40rpx;
}
.imglist{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.imgs{
  width:120rpx;
  height: 120rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  background-color: #eeeeee;
}
.uploadimg{
  width:120rpx;
  height: 120rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  background-color: #eeeeee;
}
.imglist .iconfont{
  width:50rpx;
  height: 50rpx;
  font-size: 50rpx;
  margin:-10rpx auto 15rpx auto;
}
.content_detail .remarks{
  width:95%;
  border-radius: 10rpx;
  padding: 20rpx;
  background-color: #f0f0f0;
}
.btngroup{
  width:100%;
  position: fixed;
  bottom: 0;
}
.btngroup button{
  height:80rpx;
  line-height: 2;
  background-color: #11b786;
  border-radius: 0;
}
.overback{
  position:fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  background: #fff;
}
.overback image{
  margin:0 auto;
  display: block;
}