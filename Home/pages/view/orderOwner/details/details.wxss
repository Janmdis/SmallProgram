/* pages/view/orderDetails/orderDetails.wxss */
.orderdetail{
  font-size:25rpx;
  color:#757575;
  background-color: #f5f5f5;
}
.orderdetail>view:not(.overback){
  padding: 10rpx 0rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom:15rpx;
}
.orderdetail .number{
  float: left;
}
.orderdetail .titles{
  padding:0rpx 20rpx 10rpx 20rpx;
  border-bottom: 1rpx #f5f5f5 solid;
}
.orderdetail  .flag{
  width:5rpx;
  height:5rpx;
  border-left:5rpx #30bc8f solid;
  padding-left: 10rpx;
}
.orderdetail .red{
  color:red;
}
.orderdetail .servicename{
  float: right;
  color:#30bc8f;
}
.orderdetail .content_detail{
  padding:10rpx 40rpx;
}
.orderdetail .content_detail>view{
  clear: both;
  width:100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 10rpx 0rpx;
}
.orderdetail .half{
  width:50%;
  float: left;
}
.selectlist{
  width:40%;
  height:35rpx;
  min-height:0rpx;
  float: right;
  border:1px #cccccc solid;
  margin-right:35rpx;
  padding:0 20rpx;
  border-radius: 10rpx;
}
.switch{
  padding-bottom: 10rpx;
  border-bottom: 1px solid #f5f5f5;
}
.switch>view{
  text-align: center;
}
.weui-navbar__title{
  font-size: 25rpx;
}
.weui-navbar__item{
  padding:20rpx 0rpx;
}
.weui-tab__panel{
  padding:80rpx 40rpx 0rpx 40rpx !important;
}
.weui-navbar__slider{
  width:250rpx;
  height:5rpx;
}
.switchlist{
  padding:10rpx 20rpx;
  border-bottom:1rpx solid #f5f5f5;
}
.flag_jt{
  position: absolute;
  right:40rpx;
  font-size:30rpx;
}
.nodecontent{
  padding:10rpx 40rpx;
  border-bottom:1rpx solid #f5f5f5;
}
.nodecontent .flag_jt{
  margin-top:-10rpx;
}
.btns{
   margin-top:100rpx;
    position: fixed; 
   bottom:0rpx;
   width:100%;
   margin-bottom: 0rpx !important;
   padding-bottom: 0rpx !important;
}
.btns .weui-btn{
  font-size:30rpx;
  border-radius: 0;
  margin-top:0rpx;
}
.weui-btn[type='primary']{
  background-color: #11b786;
}
.weui-btn[type='warn']{
  background-color: #d7434d;
}
.overback{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
   background: rgba(0, 0, 0, 0.5); 
  z-index: 999;
}
.dialog{
  width:70%;
  height:fit-content;
  position:absolute;
  top:200rpx;
  left:0;
  right:0;
  margin:auto;
  z-index: 1000;
  background-color: #fff;
  border-radius: 20rpx;
  font-size: 25rpx;
}
.dialog .header{
  padding:10rpx 20rpx;
  border-bottom: 1rpx solid #cccccc;
  color:#757575;
}
.dialog .dialog-content{
  padding: 20rpx;
}
.dialog .weui-textarea{
  width:460rpx;
  height:160rpx;
  background-color: #e5e5e5;
  padding: 10rpx;
}
.dialog .btngroup{
  display: flex;
  justify-content: center;
}
.dialog .btngroup view{
  text-align: center;
  font-size: 25rpx;
  margin-top:0rpx;
  color:#11b786;
  width:50%;
  padding-top:20rpx;
  padding-bottom: 20rpx;
  clear: both;
  border-top: 1rpx solid #cccccc;
}
.dialog .btngroup .certain{
  border-right: 1rpx solid #cccccc;
}
