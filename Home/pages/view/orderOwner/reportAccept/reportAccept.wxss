.reportaccept{
  font-size:25rpx;
  color:#757575;
  background-color: #f5f5f5;
  padding-bottom:500rpx;
}
.reportaccept>view:not(.overback){
  padding-top: 10rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom:15rpx;
}
.reportaccept .number{
  float: left;
}
.reportaccept .titles{
  padding:0rpx 20rpx 10rpx 20rpx;
  border-bottom: 1rpx #f5f5f5 solid;
}
.reportaccept  .flag{
  width:5rpx;
  height:5rpx;
  border-left:5rpx #30bc8f solid;
  padding-left: 10rpx;
}
.reportaccept .red{
  color:red;
}
.reportaccept .content_detail{
  padding:10rpx 40rpx;
}
.reportaccept .content_detail>view{
  clear: both;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 10rpx 0rpx;
}
.reportaccept .content_detail .name{
  width:18%;
  float: left;
}
.reportaccept .content_detail .content input,
.reportaccept .content_detail .content textarea{
  width:75%;
  border-radius: 10rpx;
  padding: 10rpx;
  background-color: #f5f5f5;
  float: left;

}
.reportaccept .content_detail .content textarea{
  height:150rpx;
}
.holder{
  color: #cccccc;
}
.imglist{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.imgs{
  width:156rpx;
  height: 160rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  background-color: #eeeeee;
}
.uploadimg{
  width:156rpx;
  height: 140rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  background-color: #eeeeee;
}
.imglist .iconfont{
  width:50rpx;
  height: 50rpx;
  font-size: 50rpx;
  margin:-10rpx auto 15rpx auto;
}
.switchlist{
  padding:10rpx 20rpx;
  border-bottom:1rpx solid #f5f5f5;
  overflow: hidden;
}
.switchlist textarea{
  float:left;
  background-color:#f5f5f5;
  width:480rpx;
  padding:10rpx;
  border-radius:10rpx;
  z-index: 1;
}
.weui-navbar__title{
  font-size: 25rpx;
}
.weui-navbar__item{
  padding:20rpx 0rpx;
}
.weui-tab__panel{
  padding:80rpx 40rpx 0rpx 40rpx !important;
}
.weui-navbar__slider{
  width:375rpx;
  height:5rpx;
}
.btns{
   margin-top:100rpx;
    position: fixed; 
   bottom:0rpx;
   width:100%;
   margin-bottom: 0rpx !important;
   padding-bottom: 0rpx !important;
   z-index: 999;
}
.btns .weui-btn{
  font-size:30rpx;
  border-radius: 0;
  margin-top:0rpx;
}
.weui-btn[type='primary']{
  background-color: #11b786;
}
.weui-btn[type='warn']{
  background-color: #d7434d;
}